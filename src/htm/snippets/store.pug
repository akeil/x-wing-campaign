div(id="view-store")
    h4 Buy Upgrades

    ul(class="nav nav-tabs")
        | {{#slots}}
        li(class="{{active}}")
            a(href="#" data-id="{{name}}")
                i(class="xwing-miniatures-font xwing-miniatures-font-{{name}}")
                | &nbsp; {{displayName}}

        | {{/slots}}

    table(id="pilot-upgrades" class="table table-hover")
        thead
            tr
                th(class="col-sm-3") Slot
                th(class="col-sm-5") Name
                th(class="col-sm-2") Cost
                th(class="col-sm-2") Action
        tbody
            | {{#upgrades}}
            tr(class="{{#owned}}success{{/owned}}")
                td(data-id="{{name}}" data-toggle="trigger")
                    i(class="xwing-miniatures-font xwing-miniatures-font-{{slot}}"
                      title="{{#decanonicalize}}{{slot}}{{/decanonicalize}}")
                td(data-id="{{name}}" data-toggle="trigger")
                    span(data-toggle="icon")
                    | &nbsp;{{displayName}}
                    | {{#owned}}
                    span(class="badge") {{.}}&nbsp;owned
                    | {{/owned}}
                    div(class="hidden" data-toggle="show")
                        small(data-toggle="content")
                td {{cost}}
                td
                    button(class="btn btn-xs btn-primary"
                           data-id="{{name}}") Buy
            | {{/upgrades}}
