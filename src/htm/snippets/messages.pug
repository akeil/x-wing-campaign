div(id="view-messages" class="row")
    | {{#message}}
    div(class="alert alert-{{level}}" role="alert")
        button(type="button" id="message-dismiss" class="close") &times;
        strong {{levelText}}:&nbsp;
        | {{text}}
    | {{/message}}

    | {{#messagesCount}}
    p(id="message-log-toggle")
        span(id="message-log-toggle-icon") {{{toggleIcon}}}
        | &nbsp; {{messagesCount}} more messages
    | {{/messagesCount}}
    div(id="message-log" class="{{logState}}")
        | {{#messages}}
        div(class="alert alert-{{level}}" role="alert")
            strong {{levelText}}:&nbsp;
            | {{text}}
        | {{/messages}}
