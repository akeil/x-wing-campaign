div(id="view-pilot-aftermath")
    h4 Mission Aftermath
    form(id="pilot-aftermath" class="form-horizontal")
        div(class="form-group")

            label(for="pilot-aftermath-mission"
                  class="col-sm-4 control-label") Mission
            div(class="col-sm-8")
                select(name="pilot-aftermath-mission"
                       id="pilot-aftermath-mission"
                       class="form-control"
                       required)
                    option(value="") ---
                    | {{#playedMissions}}
                    option(value="{{name}}" "{{_ui_selected}}") {{displayName}}
                    | {{/playedMissions}}

        div(class="form-group")
            label(for="pilot-aftermath-xp"
                  class="col-sm-4 control-label") Total XP earned
            div(class="col-sm-8")
                input(name="pilot-aftermath-xp"
                      id="pilot-aftermath-xp"
                      type="number"
                      class="form-control")

        | {{#enemyShips}}
        div(class="form-group")
            label(for="pilot-kills-{{name}}"
                  class="col-sm-4 control-label") {{displayName}}
            div(class="col-sm-8")
                div(class="input-group")
                    span(class="input-group-btn")
                        button(class="btn btn-default" type="button") -
                    input(name="pilot-kills-{{name}}"
                          id="pilot-kills-{{name}}"
                          data-kind="{{name}}"
                          type="number"
                          class="form-control pilot-aftermath-kill")
                    span(class="input-group-btn")
                        button(class="btn btn-default" type="button") +
        | {{/enemyShips}}

        div(class="form-group")
            div(class="col-sm-offset-2 col-sm-10")
            button(type="submit" class="btn btn-default") Save
