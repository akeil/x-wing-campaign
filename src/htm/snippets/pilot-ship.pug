div(id="view-pilot-ship")
    h4 Ship
    | {{#ship}}
    p Current ship is {{ship.displayName}}
    | {{/ship}}

    | {{^ship}}
    p Select a ship.
    | {{/ship}}

    form(id="pilot-change-ship")
        div(class="form-group")
            label(for="pilot-change-ship-name") Change to
            div(class="input-group")
                select(id="pilot-change-ship-name" name="pilot-change-ship-name" class="form-control")
                    | {{#ships}}
                    option(value="{{name}}") {{displayName}}
                    | {{/ships}}
                span(class="input-group-btn")
                    button(type="submit" class="btn btn-default") Change
